<!-- include header -->
<%- include('../include/_header') %>
<!-- /include header -->



<div class="container">
  <div class="card o-hidden border-1 shadow-lg my-5">
      <div class="card-body p-5">
          <!-- Nested Row within Card Body -->
          <div class="row">

              <div class="col-lg-12">
                  <div class="p-5">
                      <div class="text-center">
                          <h1 class="h4 text-gray-900 mb-4">Create an Account!</h1>
                      </div>
                      <!-- d-flex justify-content-lg-center -->
                      
                      <form class="user" method="post" action="http://localhost:5001/api/users">

                        <!-- include Success and error message -->
                        <%- include('../include/_message') %>
                        <!-- /include Success and error message -->
                       
                        <div class="input-group mb-3">
                          <span class="input-group-text col-sm-2" >Username</span>
                          <input type="email" class="form-control form-control-user" placeholder="username@example.com" name="username" >
                        </div>
                        <div class="input-group mb-3">
                          <span class="input-group-text col-sm-2" >Name</span>
                          <input type="text" class="form-control form-control-user" placeholder="Name"  name="name" >
                        </div>
                        <div class="input-group mb-3">
                          <span class="input-group-text col-sm-2" >Password</span>
                          <input type="password" class="form-control form-control-user" placeholder="Password" name="password">
                        </div>
                        <div class="input-group mb-3">
                          <span class="input-group-text col-sm-2" >Birth Date</span>
                          <input type="date" class="form-control form-control-user" placeholder="dateOfBirth" name="dateOfBirth">
                        </div>
                        <div class="input-group mb-3">
                          <span class="input-group-text col-sm-2" >Position</span>
                          <input type="text"  class="form-control form-control-user"  value="Employee" name="position" readonly>
                        </div>
                        <div class="input-group mb-3">
                          <span class="input-group-text col-sm-2" >Role</span>
                          <input type="text"  class="form-control form-control-user"  value="user" name="role" readonly>
                        </div>
                          <button class="btn btn-primary btn-user btn-block" type="submit">Add User</button>
                      </form>
                    

                  </div>
              </div>
          </div>
      </div>
  </div>
</div>



<!-- include footer -->
<%- include('../include/_footer') %>
<!-- /include footer -->