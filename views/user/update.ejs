<!-- include header -->
<%- include('../include/_header') %>
<!-- /include header -->



<div class="container">
  <div class="card o-hidden border-1 shadow-lg my-5">
      <div class="card-body p-5">
          <!-- Nested Row within Card Body -->
          <div class="row">

              <div class="col-lg-12">
                  <div class="p-5">
                      <div class="text-center">
                          <h1 class="h4 text-gray-900 mb-4">Update an Account!</h1>
                      </div>
                      <!-- d-flex justify-content-lg-center -->
                      
                      <form class="user"  action="http://localhost:5001/api/users/<%= user._id %>?_method=PUT" method="post">

                        <!-- include Success and error message -->
                        <%- include('../include/_message') %>
                        <!-- /include Success and error message -->

                        <div class="input-group mb-3">
                          <span class="input-group-text col-sm-2" >Username</span>
                          <input type="text" class="form-control form-control-user" placeholder="username@example.com" name="username" value="<%= user.username %>">
                        </div>
                        <div class="input-group mb-3">
                          <span class="input-group-text col-sm-2" >Name</span>
                          <input type="text" class="form-control form-control-user" placeholder="Name"  name="name" value="<%= user.name %>">
                        </div>
                        <div class="input-group mb-3">
                          <span class="input-group-text col-sm-2" >Birth Date</span>
                          <input type="text" class="form-control form-control-user" placeholder="dateOfBirth"  name="dateOfBirth" value="<%= user.dateOfBirth %>">
                        </div>
                        <div class="input-group mb-3">
                          <span class="input-group-text col-sm-2" >Position</span>
                          <input type="text"  class="form-control form-control-user"  value="<%= user.position %>" name="position" readonly>
                        </div>
                        <div class="input-group mb-3">
                          <span class="input-group-text col-sm-2" >Role</span>
                          <input type="text" class="form-control form-control-user" name="role"  value="<%= user.role %>"readonly>
                        </div>
                          <button class="btn btn-primary btn-user btn-block" type="submit">Update User</button>
                      </form>
                    
                      

                  </div>
              </div>
          </div>
      </div>
  </div>
</div>



<!-- include footer -->
<%- include('../include/_footer') %>
<!-- /include footer -->